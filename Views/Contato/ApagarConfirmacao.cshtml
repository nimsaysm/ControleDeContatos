@model ContatoModel

@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h1 class="display-4">Deseja apagar o contato de @Model.Nome?</h1>
    <br>

    <a class="btn btn-primary" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Index" role="button">Cancelar exclusão</a>
    <a class="btn btn-danger" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="ApagarContato" role="button">Apagar contato</a>
</div>

