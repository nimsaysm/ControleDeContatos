@model ContatoModel

@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="CriarContato" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">

        @* Mensagem de validação *@
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br>

    <div class="form-group">
        <label for="email">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-light" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
