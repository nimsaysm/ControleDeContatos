@model ContatoModel

@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="EditarContato" method="post">
    
    @* Passando o id sem estar vis√≠vel (hidden) *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br>

    <div class="form-group">
        <label for="email">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-light" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
