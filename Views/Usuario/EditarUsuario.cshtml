@using ControleDeContatos.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">
    <h1 class="display-4">Editar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="EditarUsuario" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br>

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <br>

    <div class="form-group">
        <label for="perfil" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione o tipo de perfil</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <br>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-light" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>